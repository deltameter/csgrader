<!DOCTYPE html>
<html>
	<head>
	    <% include ../../partials/head %>
	</head>
	<body>
		<% include ../../partials/header %>
			<div class="container">
				<% if (typeof message != 'undefined'){ %>
					<%= message %>
				<% } %>
				<form class="form-horizontal" action="/course/new" method="POST">
					<fieldset>
						<div class="form-group">
							<label for="name" class="col-md-3 control-label">Course name</label>
							<div class="col-md-6">
								<input type="text" name="name" placeholder="i.e. AP Computer Science (Luo)" class="form-control" autocomplete="off">
							</div>
						</div>

						<div class="form-group">
							<label for="password" class="col-md-3 control-label">Registration Password</label>
							<div class="col-md-6">
								<input type="text" name="password" placeholder="i.e. 123456" class="form-control" autocomplete="off">
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
								<button type="submit" class="btn btn-block btn-primary">Submit</button>
							</div>
						</div>
					</fieldset>
				</form>
			</div>
		<% include ../../partials/footer %>
	</body>
</html>