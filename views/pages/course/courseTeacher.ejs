<!DOCTYPE html>
<html>
<head>
	<% include ../../partials/head %>
</head>
<body>
	<div class="container">
		<% include ../../partials/header %>
		<% if (typeof message != 'undefined'){ %>
			<%= message %>
		<% } %>
		<div class="col-xs-8 col-xs-offset-2">
			<% for (var i = course.assignments.length; i >= 0; i--){ %>
				<p><%= course.assignments[i] %></p>
			<% } %>
		</div>


		<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
			<form class="form-horizontal" action="/course/<%=course.courseID%>/classroom/new" method="POST">
				<fieldset>
					<div class="form-group">
						<div class="col-md-10 col-md-offset-1">
							<input type="text" name="name" placeholder="i.e. APCS 6th Period" class="form-control" autocomplete="off">
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
							<button type="submit" class="btn btn-block btn-primary">Submit</button>
						</div>
					</div>
				</fieldset>
			</form>
		</div>

	</div>
	<% include ../../partials/footer %>
</body>
</html>