<!DOCTYPE html>
<html>
	<head>
	    <% include ../../partials/head %>
	</head>
	<body>
		<% include ../../partials/header %>
		<div class="container">
			<% if (typeof message != 'undefined'){ %>
				<%= message %>
			<% } %>
			<%= user %>
		</div>

		<% if (!user.bIsTeacher){ %>
		<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
			<form class="form-horizontal" action="/course/join" method="POST">
				<fieldset>
					<div class="form-group">
						<div class="col-md-10 col-md-offset-1">
							<input type="text" name="identifier" placeholder="Course identifier" class="form-control" autocomplete="off">
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-10 col-md-offset-1">
							<input type="text" name="password" placeholder="Course password" class="form-control" autocomplete="off">
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
							<button type="submit" class="btn btn-block btn-primary">Submit</button>
						</div>
					</div>
				</fieldset>
			</form>
		</div>
		<% } %>
		<% include ../../partials/footer %>
	</body>
</html>