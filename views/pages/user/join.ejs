<!DOCTYPE html>
<html>
<head>
	<% include ../../partials/head %>
</head>
<body>
	<div class="container">
		<% include ../../partials/header %>
		<% if (typeof message != 'undefined'){ %>
			<%= message %>
		<% } %>
		<div class="col-xs-8 col-xs-offset-2">
			<form class="form-horizontal" action="/join" method="POST">
				<fieldset>
					<legend>Sign Up!</legend>
					<div class="form-group">
						<label for="firstName" class="col-md-3 control-label">first name</label>
						<div class="col-md-6">
							<input type="text" name="firstName" class="form-control" value="<%= user.firstName %>"autocomplete="off">
						</div>
					</div>
					
					<div class="form-group">
						<label for="firstName" class="col-md-3 control-label">last name</label>
						<div class="col-md-6">
							<input type="text" name="lastName" class="form-control" value="<%= user.lastName %>"autocomplete="off">
						</div>
					</div>


					<div class="form-group">
						<label for="firstName" class="col-md-3 control-label">email</label>
						<div class="col-md-6">
							<input type="text" name="email" class="form-control" value="<%= user.email %>" autocomplete="off">
						</div>
					</div>

					<div class="form-group">
						<label for="firstName" class="col-md-3 control-label">password</label>
						<div class="col-md-6">
							<input type="password" name="password" class="form-control" autocomplete="off">
						</div>
					</div>

					<div class="form-group">
						<label for="firstName" class="col-md-3 control-label">retype password</label>
						<div class="col-md-6">
							<input type="password" name="retypePassword" class="form-control" autocomplete="off">
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-3 control-label">I am a </label>
						<div class="col-md-6">
							<div class="radio">
								<label>
									<input name="accountType" value="student" type="radio">
									Student
								</label>
							</div>
							<div class="radio">
								<label>
									<input name="accountType" value="teacher" type="radio">
									Teacher
								</label>
							</div>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
							<button type="submit" class="btn btn-block btn-primary">Submit</button>
						</div>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
	<% include ../../partials/footer %>
</body>
</html>